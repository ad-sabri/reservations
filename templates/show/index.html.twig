{% extends 'layouts/base.html.twig' %}

{% block title %}Liste des Spectacles{% endblock %}

{% block body %}
<div class="container">
    
    <h1 style="margin-top: 30px; margin-bottom:30px;">Liste des Spectacles</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Lieu</th>
                <th scope="col">Representations</th>
                <th scope="col">Prix</th>
                <th scope="col">RÃ©servable</th>
            </tr>
        </thead>

        <tbody>
        {% for show in shows %}
            <tr>    
                <td>{{ show.title }}</td>
            {% if show.location %}
                <td>{{ show.location.designation }}</td>
            {% else %}
                <td> </td>   
            {% endif %}  
                <td>{{ show.representations|length }}</td>
                <td>{{ show.price|number_format(2, ',','.')}}&nbsp;&euro;</td>
            {% if show.bookable %}
                <td>Oui</td>
            {% else %}  
                <td>Non</td>  
            {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>   
    <p>Total: {{ shows|length }} spectacles.</p>
</div>    
{% endblock %}

